pipeline {
    agent{
       label 'linux'
    }
    tools {
       maven 'mvn_3.8.1'
    }
    stages {
        stage('checkout code'){
            steps{
            git branch: 'master', credentialsId: 'GITHUB-CRED', url: 'https://github.com/kul-samples/java_sample_webapp.git'
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('How are you?') {
            steps {
                echo 'How are you?'
            }
        }
        stage ('SAST'){
          parallel{
            stage ('sonar-scan'){
              steps {
                echo 'Running Sonar Scan'
              }
            }
            stage ('synk-scan'){
              steps {
                echo 'Synk scan'
              }
            }
            stage ('DC'){
              steps {
                echo 'Running Dependency Check'
              }
            }
          }
        }
    }
}
